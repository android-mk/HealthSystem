@model IEnumerable<HealthSystem.Models.HealthProgram>

@{
    ViewData["Title"] = "Health Programs";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="d-flex justify-content-between mb-3">
        <a asp-action="Create" class="btn btn-success">Create New Program</a>
        @* The "View Enrolled Clients" link should be inside the loop *@
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                            <a asp-controller="Clients" asp-action="EnrolledInProgram" asp-route-programId="@item.Id" class="btn btn-sm btn-primary">View Enrolled Clients</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>